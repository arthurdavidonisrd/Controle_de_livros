<style> 
    h1{
        text-align: center;
    }

    form{
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .form-control{
        display: flex;
        flex-direction: column;
        width: 320px;
        margin: 8px;
    }
    </style>

<h1>Edite seu livro</h1>

<form action="/books/uptadebooks" method="post">
    <input type="hidden" name="id" value="{{book.id}}">
    <div class="form-control">
        <label for="">Nome do livro</label>
        <input type="text" name="title" value="{{book.title}}" id="">
    </div>

     <div class="form-control">
        <label for="">Quantas paginas o livro tem?</label>
        <input type="text" name="pageqty" value="{{book.pageqty}}" id="">
    </div>

    <input type="submit" value="Editar livro">
</form>
